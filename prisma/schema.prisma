generator client {
  provider        = "prisma-client"
  output          = "../generated/prisma"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  username  String    @unique
  email     String    @unique
  role      UserRole  @default(STUDENT)
  password  String
  avatar    String?
  cover     String?
  birthDate DateTime? @map("birth_date")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  events   Event[]
  articles Article[]

  @@map("users")
}

enum UserRole {
  SUPER_ADMIN
  ADMIN
  STUDENT
  GRADUETE
}

model Student {
  id                String    @id @default(uuid())
  code              String    @unique
  name              String
  gender            String
  scholarship       String
  financier         String?
  qualification     String
  specialty         String?
  birthProvince     String?   @map("birth_province")
  birthDate         DateTime? @map("birth_date") @db.Date
  idNumber          String?   @map("id_number")
  email             String?
  phone1            String?   @map("phone_1")
  phone2            String?   @map("phone_2")
  fatherAffiliation String?   @map("father_affiliation")
  motherAffiliation String?   @map("mother_affiliation")
  guardianName      String?   @map("guardian_name")
  guardianAddress   String?   @map("guardian_address")
  guardianPhone     String?   @map("guardian_phone")
  status            String?
  actualProvince    String?   @map("actual_province")
  actualDistrict    String?   @map("actual_district")
  currentOccupation String?   @map("current_occupation")
  companyName       String?   @map("company_name")
  companyPhone      String?   @map("company_phone")
  position          String?
  startYear         String?   @map("start_year")

  residencyRegime1 String? @map("residency_regime_1")
  year1            String? @map("year_1")
  level1           String? @map("level_1")
  completionYear1  String? @map("completion_year_1")
  observation1     String? @map("observation_1") @db.Text()

  residencyRegime2 String? @map("residency_regime_2")
  year2            String? @map("year_2")
  level2           String? @map("level_2")
  completionYear2  String? @map("completion_year_2")
  observation2     String? @map("observation_2") @db.Text()

  residencyRegime3 String? @map("residency_regime_3")
  year3            String? @map("year_3")
  level3           String? @map("level_3")
  completionYear3  String? @map("completion_year_3")
  observation3     String? @map("observation_3") @db.Text()

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("students")
}

enum StudentStatus {
  ACTIVE
  INACTIVE
  GRADUETED
}

model Certification {
  id           String @id @default(uuid())
  name         String
  instituition String
  description  String
  startDate    String @map("start_date")
  endDate      String @map("end_date")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("certifications")
}

model Experience {
  id           String @id @default(uuid())
  name         String
  description  String
  instituition String
  startDate    String @map("start_date")
  endDate      String @map("end_date")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("experience")
}

model Qualification {
  id             String  @id @default(uuid())
  name           String
  description    String?
  bannerUrl      String? @map("banner_url")
  workload       Int
  duration       Int
  noticeUrl      String? @map("notice_url") //url do edital
  knowledgeAreas String? @map("knowledge_areas")

  modules Module[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("qualifications")
}

model Module {
  id              String        @id @default(uuid())
  title           String
  description     String
  requirements    String
  qualification   Qualification @relation(fields: [qualificationId], references: [id], onDelete: Cascade)
  qualificationId String

  moduleLevels ModuleLevel[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("modules")
}

model ModuleLevel {
  id       String @id @default(uuid())
  title    String
  pdfUrl   String @map("pdf_url")
  module   Module @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  moduleId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("module_levels")
}

model Professor {
  id String @id @default(uuid())

  @@map("professors")
}

model Event {
  id          String    @id @default(cuid())
  title       String
  description String?   @db.Text()
  startDate   DateTime
  endDate     DateTime?
  location    String?
  type        EventType
  imageUrl    String?
  organizer   String? // Nome da entidade ou departamento organizador
  isPublished Boolean   @default(false)

  createdById String
  createdBy   User   @relation(fields: [createdById], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("events")
}

enum EventType {
  TRAINING
  SEMINAR
  CONFERENCE
}

model Article {
  id         String        @id @default(cuid())
  title      String
  slug       String        @unique
  content    String // corpo principal (Markdown ou HTML)
  imageUrl   String? // imagem de capa
  category   ArticleType
  tags       String? // tags separados por v√≠rgula
  status     ArticleStatus @default(DRAFT)
  isFeatured Boolean       @default(false) // para destacar artigos na homepage

  authorId String
  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)

  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("articles")
}

enum ArticleType {
  INNOVATION
  PUBLICATION
}

enum ArticleStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model JobVacancy {
  id           String   @id @default(cuid())
  title        String
  area         String
  description  String
  requirements String
  imageUrl     String?
  publishedAt  DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("job-vacancies")
}
