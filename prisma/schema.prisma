generator client {
  provider        = "prisma-client"
  output          = "../generated/prisma"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  username  String    @unique
  email     String    @unique
  role      UserRole  @default(STUDENT)
  password  String
  avatar    String?
  cover     String?
  birthDate DateTime? @map("birth_date")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  events Event[]

  @@map("users")
}

enum UserRole {
  SUPER_ADMIN
  ADMIN
  STUDENT
  GRADUETE
}

model Student {
  id               String          @id @default(uuid())
  name             String
  email            String          @unique
  avatar           String?
  code             String
  status           StudentStatus   @default(INACTIVE)
  certifications   Certification[]
  experiences      Experience[]
  birthDate        DateTime?       @map("birth_date")
  bio              String?         @db.Text()
  gender           String?
  employmentStatus Boolean         @default(false)
  scholarship      Boolean         @default(false)
  financier        String?
  qualification    Qualification   @relation(fields: [qualificationId], references: [id], onDelete: Cascade)
  qualificationId  String
  phoneNumber      String          @map("phone_number")
  phoneNumber2     String?         @map("phone_number_2")
  specialty        String?
  graduationYear   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("students")
}

enum StudentStatus {
  ACTIVE
  INACTIVE
  GRADUETED
}

model Certification {
  id           String @id @default(uuid())
  name         String
  instituition String
  description  String
  startDate    String @map("start_date")
  endDate      String @map("end_date")

  students Student[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("certifications")
}

model Experience {
  id           String    @id @default(uuid())
  name         String
  description  String
  instituition String
  startDate    String    @map("start_date")
  endDate      String    @map("end_date")
  students     Student[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("experience")
}

model Qualification {
  id             String  @id @default(uuid())
  name           String
  description    String?
  bannerUrl      String? @map("banner_url")
  workload       Int
  duration       Int
  pdfUrl         String? @map("pdf_url")
  noticeUrl      String? @map("notice_url") //url do edital
  knowledgeAreas String? @map("knowledge_areas")

  modules  Module[]
  students Student[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("qualifications")
}

model Module {
  id            String        @id @default(uuid())
  title         String
  description   String
  requirements  String
  qualification Qualification @relation(fields: [qualificationId], references: [id], onDelete: Cascade)

  moduleLevels    ModuleLevel[]
  qualificationId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("modules")
}

model ModuleLevel {
  id       String @id @default(uuid())
  title    String
  pdfUrl   String @map("pad_url")
  module   Module @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  moduleId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("module_levels")
}

model Professor {
  id String @id @default(uuid())

  @@map("professors")
}

model Event {
  id          String    @id @default(cuid())
  title       String
  description String?   @db.Text()
  startDate   DateTime
  endDate     DateTime?
  location    String?
  type        EventType
  imageUrl    String?
  organizer   String? // Nome da entidade ou departamento organizador
  isPublished Boolean   @default(false)
  category    String

  createdById String
  createdBy   User   @relation(fields: [createdById], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("events")
}

enum EventType {
  TRAINING
  SEMINAR
  CONFERENCE
}
